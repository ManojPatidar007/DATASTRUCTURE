package com.mp;

public class BSTree {
	Node root=null;
	int l,r;
	public void insert(int data){

		root=insert(this.root,data);

	}
	private Node insert(Node root, int data) {
		if(root==null){
			Node node=new Node(data);
			return node;
		}
		if(root.value<data){
			root.rlink=	insert(root.rlink,data);
		}
		else{
			root.llink=insert(root.llink,data);
		}
		return root;
	}

	public void inShow(){

		inorderShow(root);
	}
	private void inorderShow(Node root) {

		if(root==null){return;}
		inorderShow(root.llink);
		System.out.println(root.value);
		inorderShow(root.rlink);

	}
	public void heigth(){
		int i= height(root);
		System.out.println("height of tree="+i);
	}
	private int height(Node root) {
		if(root==null){
			return 0;
		}
		if(root.llink==null&&root.rlink==null){
			return 0;
		}
		l=height(root.llink);
		r=height(root.rlink);
		return 1+(l>r?l:r);
		
	}
	public int count(){
		return totalNode(root);
	}
	private int totalNode(Node root) {
		if(root==null){
			return 0;
		}
		if(root.llink==null&&root.rlink==null){
			return 1;
		}
		l=height(root.llink);
		r=height(root.rlink);
		return 1+l+r;
		
	}
	
}
