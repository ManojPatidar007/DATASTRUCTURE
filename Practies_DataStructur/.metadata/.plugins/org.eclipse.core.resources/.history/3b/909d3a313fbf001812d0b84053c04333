package com.mp;

public class BSTree {
	Node root=null;
	public void insert(int data){
		
		root=insert(this.root,data);
		
	}
	private Node insert(Node root, int data) {
		if(root==null){
			Node node=new Node(data);
			return node;
			//return;
		}
		if(root.value<data){
			//System.out.println("left call"+data);
		root.llink=	insert(root.rlink,data);
			
		}
		else{
			//System.out.println("right call"+data);
			
			root.rlink=insert(root.llink,data);
		}
		return root;

	}
	
	public void inShow(){
		System.out.println("root before call="+root);
		inorderShow(root);
	}
	private void inorderShow(Node root) {
		System.out.println("root="+root);
		if(root!=null){
		inorderShow(root.llink);
		System.out.println(root.value);
		inorderShow(root.rlink);
		}
	}
}
