package com.mp;

public class BSTree {
	Node root;
	public void insert(int data){
		Node node=new Node(data);
		if(root==null){

			root=node;
			return;
		}
		else{
			insert(root,data);
		}
	}
	private void insert(Node root, int data) {
		if(root==null){
			Node node=new Node(data);
			root=node;
			return;
		}
		if(root.value<data){
			insert(root.rlink,data);
		}
		else{
			insert(root.llink,data);
		}

	}
	
	public void inShow(){
		inorderShow(root);
	}
	private void inorderShow(Node root) {
		if(this.root!=null)
		inorderShow(this.root.llink);
		System.out.println(this.root.value);
		inorderShow(this.root.rlink);
		
	}
}
